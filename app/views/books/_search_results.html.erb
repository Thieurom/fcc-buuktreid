<% if @search_results %>
  <% @search_results.each do |result| %>
    <li class="list__item">
      <div class="search-book">
        <% if result['cover_image_link'].empty? %>
          <div class="search-book__cover" style="background-color:#7ED321" ></div>
        <% else %>
          <div class="search-book__cover" style=<%= "background-image:url(" + result['cover_image_link'] + ")" %>></div>
        <% end %>
        <div class="search-book__info">
          <div class="search-book__title"><%= result['title'] %></div>
          <div class="search-book__author"><%= result['author'] %></div>
          <div class="search-book__description"><%= result['description'] %></div>
        </div>
        <div class="search-book__action">
          <button class="button button--small button--secondary">Add book</button>
        </div>
      </div>
    </li>
  <% end %>
<% end %>
