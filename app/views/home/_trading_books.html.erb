<% if @trading_books %>
  <ul class="list">
    <% @trading_books.each do |book| %>
      <li class="list__item">
        <div class="book" data-book-id=<%= book.id %>>
          <div class="book__title"><%= book.title %></div>
          <div class="book__author"><%= book.author %></div>
          <div class="book__sub-info">
            <% if book.cover_image_link.empty? %>
              <div class="book__cover" style="background-color:#7ED321" ></div>
            <% else %>
              <div class="book__cover" style=<%= "background-image:url(" + book.cover_image_link + ")" %>></div>
            <% end %>
            <div class="book__extra-info">
              <div class="book__description"><%= book.description %></div>
              <div class="book__action">
                <div class="trader">Trading by <span class="trader__name"><%= book.user.username %></span>
                </div>
                <% if correct_user?(book.user) %>
                  <button class="button button--small button--danger">cancel</button>
                <% else %>
                  <button class="button button--small button--secondary">accept</button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
