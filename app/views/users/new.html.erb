<%= provide(:title, "Sign up for Buuktreid") %>
<main class="main main--alt">
  <div class="main__inner">
    <a class="brand-logo brand-logo--alt-big", href="<%= root_path %>">Buuktreid</a>
    <div class="panel">
      <div class="panel__head">
        <h3 class="h3">Create a new account</h3>
      </div>
      <%= form_for(@user, url: signup_path, html: {class: 'entry-form'}) do |f| %>
        <%= render 'shared/error_messages' %>
        <div class="entry-form__group">
          <%= f.text_field :username, class: 'entry-form__input', placeholder: 'Username' %>
        </div>
        <div class="entry-form__group">
          <%= f.email_field :email, class: 'entry-form__input', placeholder: 'Email address' %>
        </div>
        <div class="entry-form__group">
          <%= f.password_field :password, class: 'entry-form__input', placeholder: 'Password' %>
        </div>
        <div class="panel__note">*All fields are required.</div>
        <%= f.submit 'Sign up', class: 'entry-form__submit button button--primary button--full' %>
      <% end %>
      <div class="panel__foot">Already have an account? <%= link_to 'Login', login_path, class: 'link' %></div>
    </div>
  </div>
</main>
<%= render 'shared/alt_footer' %>
